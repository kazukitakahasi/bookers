<h1>Editing Book</h1>

<% if @book.errors.any? %>
	<div id= "error_explanation">

		<h4><%= @book.errors.count %> error prohibited this book from being saved:</h4>

		<ul>
			<% @book.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>


<%= form_for(@book) do |f| %>

    <h3>Title</h3>
    <%= f.text_field :title, class: "book_title" %>

    <h3>Body</h3>
    <%= f.text_area :body, class: "book_body" %>

    <%= f.submit 'Update Book', class: "actions" %>
<% end %>

<%= link_to "Show", book_path(@book), class: "show_#{@book.id}" %>

<%= link_to "Back", books_path, class: "back" %>
