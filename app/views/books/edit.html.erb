
<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">

			<h1>Editing Book</h1>

			<% if @book.errors.any? %>
				<div id= "error_explanation">

					<h4><%= @book.errors.count %> error prohibited this book from being saved:</h4>

					<ul>
						<% @book.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>


			<%= form_for(@book) do |f| %>

				<div class="field row">
				    <label>Title</label>
				    <%= f.text_field :title, class: "book_title col-xs-12" %>
				</div>

				<div class="field row">
				    <label>Opinion</label>
				    <%= f.text_area :opinion, class: "book_opinion col-xs-12" %>
				</div>

				<div class="actions row">
			    	<%= f.submit 'Update Book', class: "actions btn btn-primary col-xs-12" %>
				</div>
			<% end %>

			<%= link_to "Show", book_path(@book), class: "show_#{@book.id}" %> |
			<%= link_to "Back", books_path, class: "back" %>

		</div>
	</div>
</div>