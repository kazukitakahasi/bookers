

<div class="container">
  <div class="row">
    <div class="col-xs-3">

      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100,class: "profile-img", fallback: "no_image.jpg" %>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(user), class: " col-xs-12 btn btn-default glyphicon glyphicon-wrench" do %>
        <% end %>
      </div>

      <h2>New book</h2>

      <%= form_for(book) do |f| %>

        <% if book.errors.any? %>
          <%= book.errors.count %>件のエラーが発生しました
          <% book.errors.full_message.each do |message| %>
              <%= message %>
          <% end %>
        <% end %>

        <div class="field row">
        	<label> Title</label>
        	<%= f.text_field :title, class: "col-xs-12" %>
        </div>

        <div class="field row">
        	<label> Opinion</label>
        	<%= f.text_area :opinion, class: "col-xs-12" %>
        </div>

        <div class="action row">
      	<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
        </div>

      <% end %>
    </div>


