
<%= render 'users/list', book: @book, user: @user %>

    <div class="col-xs-9">

      <h2>Books</h2>

      <table class= "table table-hover">
        <thead>
          <tr>
            <th></th>
            <th> Title</th>
            <th> Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td> <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50,class: "profile-img", fallback: "no_image.jpg" %></td>
              <td> <%= link_to book_path(book.id) do %>
                <%= book.title %>
                   <% end %>
                </td>
              <td> <%= book.opinion %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>